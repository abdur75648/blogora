<%- include("partials/header.ejs") %>
<div class="mainPost">
<form class="form-signin" action="/subscribe" method="POST">
    <img style="width: 30%;" class="mb-4" src="download.jpg" alt="">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up to My Newsletter</h1>
    <input class="top form-control" type="text" name="name" placeholder="Your Name" required autofocus>
    <input class="middle form-control" type="email" name="email" placeholder="Email address" required autofocus>
    <input class="bottom form-control" type="password" name="password" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
</form>
</div>

